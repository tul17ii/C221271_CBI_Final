<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/hdwalpaper" />

    <!-- Journey Title Input -->
    <EditText
        android:id="@+id/journeyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Journey Title"
        android:background="@drawable/edit_text_border"
        android:padding="12dp"
        android:textColor="#CCCCFF"
        android:textColorHint="#CCCCFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Journey Description Input -->
    <EditText
        android:id="@+id/journeyDescription"
        android:layout_width="369dp"
        android:layout_height="373dp"
        android:layout_margin="16dp"
        android:background="@drawable/edit_text_border"
        android:gravity="top"
        android:hint="Write your journey here..."
        android:inputType="textMultiLine"
        android:minLines="5"
        android:padding="12dp"
        android:textColor="#CCCCFF"
        android:textColorHint="#CCCCFF"
        app:layout_constraintBottom_toTopOf="@id/saveJournalButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/journeyTitle" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveJournalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/edit_text_border"
        android:padding="12dp"
        android:text="Save Journey"
        android:textColor="#CCCCFF"
        app:layout_constraintBottom_toTopOf="@id/showJourneysButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button to View Saved Journeys -->
    <Button
        android:id="@+id/showJourneysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/edit_text_border"
        android:padding="12dp"
        android:text="View Saved Journeys"
        android:textColor="#CCCCFF"
        app:layout_constraintTop_toBottomOf="@id/saveJournalButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
