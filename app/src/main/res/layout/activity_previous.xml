<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".PreviousActivity"
    tools:ignore="ExtraText">

    <!-- Galaxy Image -->
    <!-- Replace with your galaxy image -->
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="50dp" />


    <ImageView
        android:id="@+id/galaxyImage"
        android:layout_width="431dp"
        android:layout_height="1086dp"
        android:src="@drawable/awe"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="-207dp" />


    <Button
        android:id="@+id/goToLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:text="Go to Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spaceFactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake the device to get a new space fact!"
        android:textSize="18sp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
