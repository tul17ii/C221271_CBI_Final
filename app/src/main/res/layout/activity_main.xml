<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <!-- Share Story Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareButton"
        android:layout_width="244dp"
        android:layout_height="58dp"
        android:text="Share Story"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483"
        app:cornerRadius="12dp"
        app:backgroundTint="#6c3483"
        android:textColor="@android:color/white"
        app:rippleColor="#6c3483"/>

    <!-- Go to Journal Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveJournalButton"
        android:layout_width="161dp"
        android:layout_height="59dp"
        android:text="Go to Journal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575"
        app:cornerRadius="12dp"
        app:backgroundTint="#ba4a00"
        android:textColor="@android:color/black"
        app:rippleColor="#ba4a00"/>

    <!-- Explore Planets Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/exploreButton"
        android:layout_width="244dp"
        android:layout_height="58dp"
        android:text="Explore Planets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.669"
        app:cornerRadius="12dp"
        app:backgroundTint="#c65ec9"
        android:textColor="@android:color/white"
        app:rippleColor="#c65ec9"/>

    <!-- GalactoRadio Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/musicToggleButton"
        android:layout_width="161dp"
        android:layout_height="59dp"
        android:text="GalctoRadio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765"
        app:cornerRadius="12dp"
        app:backgroundTint="#5eacc9"
        android:textColor="@android:color/black"
        app:rippleColor="#5eacc9"/>

    <!-- Astronomy Events Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/eventButton"
        android:layout_width="244dp"
        android:layout_height="58dp"
        android:text="Astronomy Events"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864"
        app:cornerRadius="12dp"
        app:backgroundTint="#d3cf49"
        android:textColor="@android:color/white"
        app:rippleColor="#d3cf49"/>

    <!-- Challenges Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/challengesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Look challenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944"
        app:cornerRadius="12dp"
        app:backgroundTint="#af7ac5"
        android:textColor="@android:color/black"
        app:rippleColor="#af7ac5"/>

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="429dp"
        android:layout_height="860dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/efgh" />
</androidx.constraintlayout.widget.ConstraintLayout>
